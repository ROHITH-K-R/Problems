// When Index starts from 0
#include <iostream>
using namespace std;
int fun(int n,int k){
    if(n==1){return n;}
    
    return ((fun(n-1,k)+k)%n); //if index starts from 1 just add 1 to the end result OR use return((fun(n-1,k)+k-1)%n);
}

int main() {
	int n=7,k=3,ans;
	ans=fun(n,k);
	cout<<ans;
	return 0;
}
