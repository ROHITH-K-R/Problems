#include <bits/stdc++.h>
using namespace std;
  
// Function to check sum of digit using recursion 
int sum(int n) 
{ 
    if (n == 0) 
       return 0; 
    return (n % 10 + sum_of_digit(n / 10)); 
} 
  
int main() 
{ 
    int n = 12345; 
    int result = sum(n); 
    cout << "Sum of digits is "<< result; 
    return 0; 
} 
