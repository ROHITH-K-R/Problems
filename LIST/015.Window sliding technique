// Finding the max sum of elements of an array k considered at a time

int window(int a[],int n,int k){
    int res=0,temp=0;
    for(int i=0;i<k;i++){
        temp+=a[i];
        
    }
    for(int j=0;j<n-k;j++){
        temp+=a[k+j]-a[j];
        res=max(res,temp);
    }
    return res;
}

